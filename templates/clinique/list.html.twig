{% extends 'base.html.twig' %}
{% block body %}

    <html>
    <style>
        .animateuse{
            animation: leelaanimate 2s infinite;
        }
        @keyframes leelaanimate{
            0%{color:red}
            10%{color:Grey}
            20%{color:whitesmoke}
        }</style>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"><h1 class="text-center   text-uppercase animateuse">Liste des cliniques !</h1></strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <tr>
                                <tr>
                                    <td>ID</td>
                                    <td>Nom</td>
                                    <td>Adresse</td>
                                    <td>Numéro Téléphone</td>
                                    <td>Url Image</td>
                                    <td></td>
                                    <td></td>



                                </tr>
                                {% for clinique in clinique %}
                                    <tr>
                                        <td>{{clinique.id}}</td>
                                        <td>{{clinique.nom}}</td>
                                        <td>{{clinique.adresse}}</td>
                                        <td>{{clinique.tel}}</td>
                                        <td><img src="{{clinique.image}}"></td>
                                        <td><a href="{{ path('updateclinique',{'id':clinique.id}) }}"><button type="button" class="btn btn-outline-success" data-dismiss="modal">Update</button></a></td>
                                        <td><a href="{{ path('dropclinique' ,{'id':clinique.id})}}" ><button type="button" class="btn btn-outline-danger" data-dismiss="modal">Delete</button></a></td>


                                    </tr>

                                {%endfor%}
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


    </div><!-- /#right-panel -->

    </html>
{% endblock %}