{% extends 'base.html.twig' %}
{% block body %}

    <html>
    <style>
        .animateuse{
            animation: leelaanimate 2s infinite;
        }
        @keyframes leelaanimate{
            0%{color:red}
            10%{color:Grey}
            20%{color:whitesmoke}

        }</style>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"><h1 class="text-center   text-uppercase animateuse">Modifier une Offre !</h1></strong>
                        </div>
                        {{ form_start(our_form,{'attr':{'novalidate' : 'novalidate'}}) }}

                        <tr>
                            {{ form_label(our_form.clinique,"Clinique : ") }}
                            {{ form_widget(our_form.clinique)}}
                            {{ form_errors(our_form.clinique)}}
                        </tr>
                        <tr>
                            {{ form_label(our_form.intervention,"Intervention : ") }}
                            {{ form_widget(our_form.intervention)}}
                            {{ form_errors(our_form.intervention)}}
                        </tr>
                        <tr>
                            {{ form_label(our_form.date,"Date Expiration : ") }}
                            {{ form_widget(our_form.date)}}
                            {{ form_errors(our_form.date)}}
                        </tr>
                        <tr>
                            {{ form_label(our_form.prix,"Prix : ") }}
                            {{ form_widget(our_form.prix)}}
                            {{ form_errors(our_form.prix)}}
                        </tr>
                        {{ form_end(our_form) }}

                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
    </div><!-- .content -->


    </div><!-- /#right-panel -->

    </html>


{% endblock %}