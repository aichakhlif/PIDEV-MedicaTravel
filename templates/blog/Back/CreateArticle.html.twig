{% extends 'Back.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Blog</strong> Ajouter Article
            </div>
            <div class="card-body card-block">
                {{ form_start(formArticle) }}
                {{ form_errors(formArticle) }}






                <form>
                    <div class="row">
                        <div class="mb-3 col-md-5">
                            {{ form_row(formArticle.Titre) }}
                        </div>

                        <div class="mb-3 col-md-2">
                            {{ form_row(formArticle.Auteur) }}
                        </div>
                        <div class="mb-3 col-md-4">
                            {{ form_row(formArticle.Cat) }}

                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-11">
                            {{ form_row(formArticle.Contenu) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">

                                <div class="mt-2">

                                    {{ form_widget(formArticle.Image)}}
                                    {{ form_errors(formArticle.Image)}} {#  <span class="btn btn-primary">Upload</--span>#}
                                </div>

                            </div>
                        </div>




                    </div>
                    <br>


                    <button type="submit" class="btn btn-primary">{% if editMode %}Enregistrer{% else %}Ajouter{% endif %}</button>
                    {{ form_end(formArticle) }}
                </form>


            </div>


        </div>
















    </div>
    </div><!-- .animated -->
    </div><!-- .content -->
    </div>
{% endblock %}
